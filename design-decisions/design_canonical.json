{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "2.0.0",
  "description": "Canonical Ollie Invoice Design System - Single Source of Truth",
  "last_updated": "2025-12-16",
  "status": "proposed",
  
  "typography": {
