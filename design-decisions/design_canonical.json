    "enforcement": {
      "forbidden": [
        "text-slate-*",
        "bg-slate-*",
        "text-gray-*",
        "bg-gray-*",
        "text-green-*",
        "bg-green-*",
        "text-red-*",
        "bg-red-*",
        "text-blue-*",
        "bg-blue-*",
        "Any direct Tailwind color except for marketing decorative gradients"
      ],
      "required": "All components must use CSS variables or design tokens only"
    }
  },
  
