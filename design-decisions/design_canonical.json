  "border_radius": {
    "values": {
      "sm": {
        "px": 3,
        "rem": "0.1875rem",
        "use": "Tabs, tight UI elements"
      },
      "md": {
        "px": 6,
        "rem": "0.375rem",
        "use": "Buttons, inputs, badges (STANDARD)"
      },
      "xl": {
        "px": 12,
        "rem": "0.75rem",
        "use": "Cards, panels (STANDARD)"
      },
      "2xl": {
        "px": 16,
        "rem": "1rem",
        "use": "Marketing cards, large panels"
      },
      "full": {
        "value": "9999px",
        "use": "Pills, avatars, circular buttons"
      }
    },
    "removed": {
      "lg": "9px (0.5625rem) - REMOVED, do not use"
    },
    "usage_rules": {
      "app_buttons": "rounded-md (6px)",
      "app_cards": "rounded-xl (12px)",
      "marketing_ctas": "rounded-full (pill)",
      "marketing_cards": "rounded-2xl (16px)",
      "avatars": "rounded-full"
    }
  },
  
  "elevation": {
    "levels": [
      {
        "level": 0,
        "name": "flat",
        "border": "1px solid border-default",
        "shadow": "none",
        "background": "bg-background or bg-background-elevated",
        "use": "Table rows, list items, sections"
      },
      {
        "level": 1,
        "name": "resting",
        "border": "1px solid border-default",
        "shadow": "0 1px 3px rgba(0, 0, 0, 0.04)",
        "background": "bg-background-elevated",
        "css_class": "elevation-1",
        "use": "Cards, panels, form sections"
      },
      {
        "level": 2,
        "name": "raised",
        "border": "1px solid border-default",
        "shadow": "0 2px 8px rgba(0, 0, 0, 0.06)",
        "background": "bg-background-elevated",
        "css_class": "elevation-2",
        "use": "Dropdown menus, popovers, tooltips"
      },
      {
        "level": 3,
        "name": "floating",
        "border": "1px solid border-default",
        "shadow": "0 8px 24px rgba(0, 0, 0, 0.08)",
        "background": "bg-background-elevated",
        "css_class": "elevation-3",
        "use": "Modals, dialogs, sheets"
      },
      {
        "level": 4,
        "name": "overlay",
        "border": "none",
        "shadow": "0 16px 48px rgba(0, 0, 0, 0.12)",
        "background": "bg-background-elevated",
        "backdrop": "bg-overlay-dialog",
        "css_class": "elevation-4",
        "use": "Full-screen modals, critical alerts"
      }
    ],
    
    "interaction_states": {
      "hover": {
        "overlay": "var(--overlay-hover)",
        "transition": "0.2s ease",
        "z_index": 999,
        "description": "Pseudo-element covers entire element including border"
      },
      "active": {
        "overlay": "var(--overlay-active)",
        "transform": "scale(0.97) for buttons",
        "transition": "0.1s ease"
      },
      "toggle": {
        "overlay": "var(--overlay-active)",
        "z_index": -1,
        "description": "Sits behind content, not above"
      }
    },
    
    "css_classes": {
      "structural": [
        "elevation-0",
        "elevation-1",
        "elevation-2",
        "elevation-3",
        "elevation-4"
      ],
      "interactive": [
        "hover-elevate",
        "active-elevate",
        "toggle-elevate",
        "hover-elevate-strong"
      ]
    },
    
    "rules": {
      "borders_only": "Table rows, list items, inline elements",
      "borders_plus_shadows": "Cards, panels, dropdowns, dialogs",
      "overlays": "ALL interactive states (hover, active, toggle)",
      "never": "Shadow without border (except full-page overlays)"
    }
  },
  
  "components": {
    "button": {
      "variants": [
        {
          "name": "primary",
          "background": "bg-primary",
          "text": "text-white",
          "border": "none",
          "hover": "overlay darken",
          "active": "scale(0.97) + stronger overlay",
          "use": "Primary actions (Create, Send, Submit, Save)"
        },
        {
          "name": "secondary",
          "background": "bg-background-muted",
          "text": "text-primary",
          "border": "1px solid border-default",
          "hover": "overlay effect",
          "use": "Secondary actions (Cancel, Close, Back)"
        },
        {
          "name": "outline",
          "background": "transparent",
          "text": "inherits parent",
          "border": "1px solid rgba(current, 0.10)",
          "hover": "overlay effect",
          "use": "Tertiary actions (dropdowns, tabs alternative)"
        },
        {
          "name": "ghost",
          "background": "transparent",
          "text": "text-secondary",
          "border": "none",
          "hover": "bg-background-muted",
          "use": "Icon buttons, subtle actions, menu items"
        },
        {
          "name": "destructive",
          "background": "bg-status-error-text",
          "text": "text-white",
          "border": "none",
          "hover": "overlay darken",
          "use": "Delete, remove, irreversible actions"
        }
      ],
      
      "sizes": [
        {
          "name": "sm",
          "height": "32px",
          "padding_horizontal": "12px",
          "font_size": "12px",
          "icon_size": "14px",
          "use": "Table actions, compact UI"
        },
        {
          "name": "md",
          "height": "40px",
          "padding_horizontal": "16px",
          "font_size": "14px",
          "icon_size": "16px",
          "use": "Standard UI buttons (DEFAULT)"
        },
        {
          "name": "lg",
          "height": "48px",
          "padding_horizontal": "24px",
          "font_size": "16px",
          "icon_size": "20px",
          "use": "Marketing CTAs, forms"
        },
        {
          "name": "xl",
          "height": "56px",
          "padding_horizontal": "32px",
          "font_size": "18px",
          "icon_size": "24px",
          "use": "Hero CTAs only"
        }
      ],
      
      "border_radius": {
        "application": "6px (rounded-md)",
        "marketing": "9999px (rounded-full)"
      },
      
      "interactions": {
        "hover": {
          "cursor": "pointer",
          "overlay": "var(--overlay-hover)",
          "transition": "0.2s ease",
          "icon_rotation": "90deg, 0.3s cubic-bezier(0.25, 0.1, 0.3, 1.4)"
        },
        "active": {
          "transform": "scale(0.97)",
          "overlay": "var(--overlay-active)",
          "transition": "0.1s ease"
        },
        "release_animation": {
          "name": "bounce-back",
          "duration": "0.22s",
          "timing": "cubic-bezier(.28, .03, .2, 1.4)",
          "keyframes": "0% scale(0.97) → 55% scale(1.02) → 100% scale(1)"
        },
        "focus": {
          "ring": "2px solid var(--primary)",
          "offset": "2px",
          "outline": "none"
        },
        "disabled": {
          "opacity": 0.5,
          "cursor": "not-allowed",
          "pointer_events": "none"
        }
      },
      
      "special_case": {
        "create_invoice_button": {
          "decision": "Consolidate into Primary variant, size md",
          "enhancements": [
            "animate-bounce-release class (optional)",
            "icon-rotate-on-hover class (optional)"
          ],
