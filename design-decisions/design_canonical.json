          "section_heading": {
            "size": "20px",
            "size_rem": "1.25rem",
            "weight": 600,
            "line_height": 1.3,
            "letter_spacing": "-0.01em",
            "font_family": "heading",
            "semantic_name": "h2"
          },
          "card_title": {
            "size": "18px",
            "size_rem": "1.125rem",
            "weight": 600,
            "line_height": 1.4,
            "letter_spacing": "-0.005em",
            "font_family": "heading",
