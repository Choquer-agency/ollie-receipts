      "heading_accent_dark": {
        "hex": "#a8d5a2",
        "css_variable": "--heading-accent",
        "description": "Light green for H1/H2 on marketing pages (dark mode only)"
      }
    },
    
    "semantic": {
      "background": {
        "light": {
          "default": {
