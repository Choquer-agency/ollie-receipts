    },
    
    "font_weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    
    "letter_spacing_rules": {
      "headings_large": "-0.015em to -0.02em (32px+)",
      "headings_small": "-0.005em to -0.01em (<32px)",
      "body": "0em",
      "uppercase_labels": "0.025em",
      "tiny_text": "0.01em (10px)"
