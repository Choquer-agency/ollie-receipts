          }
        },
        "dark": {
          "default": {
            "hsl": "0 0% 10%",
            "css_variable": "--background"
          },
          "elevated": {
            "hsl": "0 0% 14%",
            "css_variable": "--background-elevated"
          },
          "muted": {
            "hsl": "0 0% 18%",
            "css_variable": "--background-muted"
          }
        }
      },
      
      "text": {
        "light": {
          "primary": {
            "hsl": "0 0% 28%",
            "hex": "#484848",
            "css_variable": "--text-primary"
          },
          "secondary": {
            "hsl": "0 0% 42%",
            "css_variable": "--text-secondary"
          },
          "tertiary": {
            "hsl": "0 0% 55%",
            "css_variable": "--text-tertiary"
          },
          "disabled": {
            "hsl": "0 0% 70%",
            "css_variable": "--text-disabled"
          }
        },
        "dark": {
          "primary": {
            "hsl": "0 0% 90%",
            "css_variable": "--text-primary"
          },
          "secondary": {
            "hsl": "0 0% 70%",
            "css_variable": "--text-secondary"
          },
          "tertiary": {
            "hsl": "0 0% 55%",
            "css_variable": "--text-tertiary"
          },
