          "default": {
            "hsl": "48 23% 95%",
            "hex": "#F6F5F1",
            "css_variable": "--border-default"
          },
          "strong": {
            "hsl": "48 23% 90%",
            "css_variable": "--border-strong"
          },
          "subtle": {
            "hsl": "48 23% 97%",
            "css_variable": "--border-subtle"
          }
