      },
      "warning": {
        "background": {
          "hsl": "38 90% 95%",
          "css_variable": "--status-warning-bg"
        },
        "text": {
          "hsl": "38 90% 30%",
          "css_variable": "--status-warning-text"
        },
        "border": {
          "hsl": "38 90% 75%",
          "css_variable": "--status-warning-border"
        },
        "use_cases": ["pending actions", "warnings", "attention needed"]
      },
      "error": {
        "background": {
          "hsl": "0 84% 97%",
          "css_variable": "--status-error-bg"
        },
        "text": {
          "hsl": "0 84% 45%",
          "css_variable": "--status-error-text"
        },
        "border": {
          "hsl": "0 84% 85%",
