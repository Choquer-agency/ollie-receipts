        "border": {
          "hsl": "210 100% 85%",
          "css_variable": "--status-info-border"
        },
        "use_cases": ["sent invoices", "information", "neutral actions"]
      },
      "neutral": {
        "background": "Use --background-muted",
        "text": "Use --text-secondary",
        "border": "Use --border-default",
        "use_cases": ["draft invoices", "default states"]
      }
    },
    
    "chart": [
      {
        "name": "chart-1",
        "hsl": "220 70% 50%",
        "color": "blue",
        "css_variable": "--chart-1"
      },
      {
        "name": "chart-2",
        "hsl": "160 60% 45%",
        "color": "teal",
        "css_variable": "--chart-2"
      },
      {
        "name": "chart-3",
        "hsl": "30 80% 55%",
        "color": "orange",
        "css_variable": "--chart-3"
      },
      {
        "name": "chart-4",
        "hsl": "280 65% 60%",
        "color": "purple",
        "css_variable": "--chart-4"
      },
      {
        "name": "chart-5",
        "hsl": "340 75% 55%",
        "color": "pink",
        "css_variable": "--chart-5"
      }
